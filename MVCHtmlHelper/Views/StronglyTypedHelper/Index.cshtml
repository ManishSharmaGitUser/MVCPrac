@using MVCHtmlHelper.Models
@model Employee

@{
    ViewBag.Title = "Index";
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>

    <title></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
    @using (Html.BeginForm())
    {
    <div class="container">
        <div class="row">
            <div class="col-md-12">

                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })

                <br />

                @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })

                <br />
                <label for="IsEmployee">ISEmplyee</label>
                @Html.CheckBoxFor(x => x.IsEmployee)

                <br />

                <input type="submit" class="btn btn-success" name="submit" id="btnsubmit" />
            </div>
        </div>
    </div>


    }
    


</body>
</html>

